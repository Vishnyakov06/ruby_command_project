<!-- Модальное окно для последних изменений -->
<div id="recent-changes-modal" class="modal">
    <div class="modal-content wide-modal">
        <div class="modal-header">
            <h3><i class="fas fa-history"></i> Последние изменения</h3>
        </div>
        <div class="modal-body">
            <div class="recent-changes-list" id="recent-changes-list">
                <!-- Список изменений будет здесь -->
            </div>
            
            <div class="form-actions">
                <button type="button" class="btn-secondary close-modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>