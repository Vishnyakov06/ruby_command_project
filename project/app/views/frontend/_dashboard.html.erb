<div id="dashboard" class="tab-content active">
    <div class="dashboard-header">
        <h2><i class="fas fa-tachometer-alt"></i> Панель управления</h2>
        <div class="stats">
            <div class="stat-card">
                <div class="stat-icon" style="background-color: #4CAF50;">
                    <i class="fas fa-user-tie"></i>
                </div>
                <div class="stat-info">
                    <h3 id="masters-count">0</h3>
                    <p>Мастера</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background-color: #2196F3;">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-info">
                    <h3 id="clients-count">0</h3>
                    <p>Клиенты</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background-color: #FF9800;">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-info">
                    <h3 id="appointments-count">0</h3>
                    <p>Записи</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background-color: #9C27B0;">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <div class="stat-info">
                    <h3 id="revenue-today">0 ₽</h3>
                    <p>Выручка</p>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="widget">
            <h3><i class="fas fa-clock"></i> Ближайшие записи</h3>
            <div class="upcoming-appointments" id="upcoming-appointments">
                <!-- Динамически заполняется -->
            </div>
        </div>
        <div class="widget">
            <h3><i class="fas fa-star"></i> Популярные мастера</h3>
            <div class="popular-masters" id="popular-masters">
                <!-- Динамически заполняется -->
            </div>
        </div>
    </div>
</div>