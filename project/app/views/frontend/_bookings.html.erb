<div id="bookings" class="tab-content active">
    <div class="section-header">
        <h2><i class="fas fa-calendar-check"></i> Управление записями</h2>
        <div class="header-actions">
            <button class="btn-primary btn-icon" id="get-bookings-btn">
                <i class="fas fa-search"></i>
            </button>
            <button class="btn-primary btn-icon" id="add-bookings-btn">
                <i class="fas fa-plus"></i>
            </button>
            <button class="btn-primary btn-icon" id="refresh-bookings-btn">
                <i class="fas fa-sync-alt"></i>
            </button>
            <button class="btn-primary btn-icon" id="delete-bookings-btn">
                <i class="fas fa-trash-alt"></i>
            </button>
        </div>
    </div>
    <div class="table-container">
        <div class="table-wrapper">
            <table class="data-table" id="bookings-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Клиент</th>
                        <th>Мастер</th>
                        <th>Услуга</th>
                        <th>Дата</th>
                        <th>Статус</th>
                        <th>Цена</th>
                        <th>Заметка</th>
                    </tr>
                </thead>
                <tbody id="bookings-table-body">
                    <!-- Динамически заполняется -->
                </tbody>
            </table>
        </div>
    </div>
