<!-- Модальное окно для добавления записи -->
<div id="booking-modal" class="modal">
    <div class="modal-content wide-modal">
        <div class="modal-header">
            <h3><i class="fas fa-plus"></i> Добавить запись</h3>
        </div>
        <div class="modal-body">
            <form id="booking-form">
                <div id="booking-errors" class="errors-container"></div>
                <input type="hidden" id="booking-id">
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="booking-client">Клиент</label>
                        <select id="booking-client" required>
                            <option value="">Выберите клиента</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="booking-master">Мастер</label>
                        <select id="booking-master" required>
                            <option value="">Выберите мастера</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="booking-service">Услуга</label>
                    <select id="booking-service" required>
                        <option value="">Выберите услугу</option>
                    </select>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="booking-time">Время</label>
                        <input type="time" id="booking-time" required>
                    </div>
                    <div class="form-group">
                        <label for="booking-price">Цена, ₽ *</label>
                        <input type="number" id="booking-price" min="0" step="100" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="booking-status">Статус</label>
                    <select id="booking-status" required>
                        <option value="">Выберите статус</option>
                        <option value="Подтверждена">Подтверждена</option>
                        <option value="Выполнена">Выполнена</option>
                        <option value="Отменена">Отменена</option>
                        <option value="Неявка">Неявка</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="booking-note">Заметка</label>
                    <textarea id="booking-note" rows="2" placeholder="Дополнительная информация"></textarea>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn-secondary close-modal">Отмена</button>
                    <button type="submit" class="btn-primary">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>

