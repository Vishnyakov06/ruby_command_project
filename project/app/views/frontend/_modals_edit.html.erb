<!-- Модальное окно для редактирования мастера -->
<div id="edit-master-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fas fa-edit"></i> Редактировать мастера</h3>
        </div>
        <div class="modal-body">
            <form id="edit-master-form">
                <div id="edit-master-errors" class="errors-container"></div>
                <input type="hidden" id="edit-master-id">
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="edit-master-firstname">Имя</label>
                        <input type="text" id="edit-master-firstname" placeholder="Анна" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-master-lastname">Фамилия</label>
                        <input type="text" id="edit-master-lastname" placeholder="Иванова" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="edit-master-patronymic">Отчество</label>
                    <input type="text" id="edit-master-patronymic" placeholder="Сергеевна">
                </div>
                
                <div class="form-group">
                    <label for="edit-master-phone-number">Телефон</label>
                    <input type="tel" id="edit-master-phone-number" placeholder="+7 (999) 123-45-67" required>
                </div>
                
                <div class="form-group">
                    <label for="edit-master-active">Статус</label>
                    <select id="edit-master-active" required>
                        <option value="true">Активен</option>
                        <option value="false">Не активен</option>
                    </select>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn-secondary close-modal">Отмена</button>
                    <button type="submit" class="btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

