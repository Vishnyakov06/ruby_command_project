<!-- Модальное окно для редактирования записи -->
<div id="edit-booking-modal" class="modal">
    <div class="modal-content wide-modal">
        <div class="modal-header">
            <h3><i class="fas fa-edit"></i> Редактировать запись</h3>
        </div>
        <div class="modal-body">
            <form id="edit-booking-form">
                <div id="edit-booking-errors" class="errors-container"></div>
                <input type="hidden" id="edit-booking-id">
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="edit-booking-client">Клиент</label>
                        <select id="edit-booking-client" required>
                            <option value="">Выберите клиента</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="edit-booking-master">Мастер</label>
                        <select id="edit-booking-master" required>
                            <option value="">Выберите мастера</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="edit-booking-service">Услуга</label>
                    <select id="edit-booking-service" required>
                        <option value="">Выберите услугу</option>
                    </select>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="edit-booking-time">Время</label>
                        <input type="datetime-local" id="edit-booking-time" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-booking-price">Цена, ₽ *</label>
                        <input type="number" id="edit-booking-price" min="0" step="100" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="edit-booking-status">Статус</label>
                    <select id="edit-booking-status" required>
                        <option value="">Выберите статус</option>
                        <option value="Подтверждена">Подтверждена</option>
                        <option value="Выполнена">Выполнена</option>
                        <option value="Отменена">Отменена</option>
                        <option value="Неявка">Неявка</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="edit-booking-note">Заметка</label>
                    <textarea id="edit-booking-note" rows="2" placeholder="Дополнительная информация"></textarea>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn-secondary close-modal">Отмена</button>
                    <button type="submit" class="btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

