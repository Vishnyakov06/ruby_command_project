<!-- Модальное окно для уведомлений -->
<div id="notification-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>
                <i class="fas fa-info-circle" id="notification-icon"></i>
                <span id="notification-title">Уведомление</span>
            </h3>
        </div>
        <div class="modal-body">
            <div class="notification-content">
                <p id="notification-message">Текст уведомления появится здесь</p>
            </div>
            <div class="form-actions">
                <button type="button" class="btn-primary close-modal">OK</button>
            </div>
        </div>
    </div>
</div>