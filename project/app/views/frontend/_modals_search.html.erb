<!-- Модальное окно для поиска клиента по ID -->
<div id="search-client-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fas fa-search"></i> Поиск клиента</h3>
        </div>
        <div class="modal-body">
            <form id="search-client-form">
                <div class="form-group">
                    <input type="number" id="search-client-id" placeholder="ID клиента" min="1" required>
                </div>
                
                <div class="search-results" id="client-search-results" style="display: none;">
                    <div class="result-details" id="client-result-details">
                        <!-- Результаты поиска будут здесь -->
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn-secondary close-modal">Отмена</button>
                    <button type="submit" class="btn-primary">Найти</button>
                </div>
            </form>
        </div>
    </div>
</div>

