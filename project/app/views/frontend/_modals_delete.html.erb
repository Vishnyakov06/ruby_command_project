<!-- Модальное окно для удаления мастера -->
<div id="delete-master-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fas fa-user-tie"></i> Удалить мастера</h3>
        </div>
        <div class="modal-body">
            <div class="delete-confirmation">
                <div class="master-details" id="delete-master-details">
                    <!-- Детали мастера будут вставлены сюда -->
                </div>
            </div>
            
            <div class="form-actions">
                <button type="button" class="btn-secondary close-modal">Отмена</button>
                <button type="button" id="confirm-delete-master" class="btn-danger">Удалить</button>
            </div>
        </div>
    </div>
</div>

