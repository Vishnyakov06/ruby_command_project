                <input type="hidden" id="client-id">
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="client-firstname">Имя</label>
                        <input type="text" id="client-firstname" placeholder="Мария" required>
                    </div>
                    <div class="form-group">
                        <label for="client-lastname">Фамилия</label>
                        <input type="text" id="client-lastname" placeholder="Петрова" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="client-middlename">Отчество</label>
                    <input type="text" id="client-middlename" placeholder="Александровна">
