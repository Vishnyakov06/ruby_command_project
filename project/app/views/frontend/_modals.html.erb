<!-- Модальное окно для мастера -->
<div id="master-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fas fa-user-tie"></i> Добавить мастера</h3>
        </div>
        <div class="modal-body">
            <form id="master-form">
                <input type="hidden" id="master-id">
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="master-firstname">Имя</label>
                        <input type="text" id="master-firstname" placeholder="Анна" required>
                    </div>
                    <div class="form-group">
                        <label for="master-lastname">Фамилия</label>
                        <input type="text" id="master-lastname" placeholder="Иванова" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="master-middlename">Отчество</label>
                    <input type="text" id="master-middlename" placeholder="Сергеевна">
                </div>
                
                <div class="form-group">
                    <label for="master-phone">Телефон</label>
                    <input type="tel" id="master-phone" placeholder="+7 (999) 123-45-67" required>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="master-status">Статус</label>
                        <select id="master-status" required>
                            <option value="">Выберите статус</option>
                            <option value="working">Работает</option>
                            <option value="vacation">Отпуск</option>
                            <option value="sick">Больничный</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="master-active">Статус</label>
                        <select id="master-active" required>
                            <option value="1">Да</option>
                            <option value="0">Нет</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="button" class="btn-secondary close-modal">Отмена</button>
                    <button type="submit" class="btn-primary">Сохранить мастера</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно для клиента -->
